flags=0x280

symbols

message		trigger

# Special nodes
thing		sp0=-1
thing		sp1=-1
thing		sp2=-1
thing		sp3=-1
thing		sp4=-1
thing		sp5=-1
thing		sp6=-1
thing		sp7=-1
thing		sp8=-1
thing		sp9=-1
thing		sp10=-1
thing		sp11=-1
thing		sp12=-1
thing		sp13=-1
thing		sp14=-1
thing		sp15=-1
thing		sp16=-1
thing		sp17=-1
thing		sp18=-1
thing		sp19=-1

# Flags for each special node
int			spinf0=0
int			spinf1=0
int			spinf2=0
int			spinf3=0
int			spinf4=0
int			spinf5=0
int			spinf6=0
int			spinf7=0
int			spinf8=0
int			spinf9=0
int			spinf10=0
int			spinf11=0
int			spinf12=0
