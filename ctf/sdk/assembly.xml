<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<outputDirectory>\</outputDirectory>
			<directory>${project.basedir}</directory>
			<includes>
				<include>misc\**\*</include>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>\</outputDirectory>
			<directory>${project.basedir}\..\devel</directory>
			<includes>
				<include>3do\**\*</include>
				<include>cog\**\*</include>
				<include>mat\**\*</include>
				<include>misc\**\*</include>
				<include>ui\**\*</include>
				<include>*.TPL</include>
			</includes>
			<excludes>
				<exclude>3do\respawn.3do</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>rbots-patch.gob</destName>
			<source>${project.build.directory}\dependency\rbots-jk-patch.gob</source>
		</file>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>rbots-patch-nohotkeys.gob</destName>
			<source>${project.build.directory}\dependency\rbots-jk-patch-nohotkeys.gob</source>
		</file>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>MASTER.TPL</destName>
			<source>${project.basedir}\..\devel\master.tpl</source>
		</file>
		<file>
			<outputDirectory>\3do</outputDirectory>
			<destName>respawn.3DO</destName>
			<source>${project.basedir}\..\devel\3do\respawn.3do</source>
		</file>
	</files>
</assembly>
