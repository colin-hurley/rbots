			<outputDirectory>\</outputDirectory>
			<directory>${project.basedir}\..\jk-devel</directory>
			<includes>
				<include>3do\**\*</include>
				<include>cog\**\*</include>
				<include>jkl\**\*</include>
				<include>mat\**\*</include>
				<include>misc\**\*</include>
				<include>episode.jk</include>
			</includes>
			<excludes>
				<exclude>cog\force_*.cog</exclude>
				<exclude>cog\rbot-admin*.cog</exclude>
				<exclude>jkl\static.jkl</exclude>
				<exclude>misc\items.dat</exclude>
