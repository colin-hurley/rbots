<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<outputDirectory>\</outputDirectory>
			<directory>${project.basedir}</directory>
			<includes>
				<include>misc\**\*</include>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>\</outputDirectory>
			<directory>${project.basedir}\..\devel</directory>
			<includes>
				<include>3do\**\*</include>
				<include>cog\**\force_*.cog</include>
				<include>cog\**\rbot-*.cog</include>
				<include>jkl\static.jkl</include>
				<include>mat\**\*</include>
				<include>misc\**\*</include>
				<include>ui\**\*</include>
				<include>*.tpl</include>
				<include>test.bat</include>
			</includes>
			<excludes>
				<exclude>3do\m10colmn.3do</exclude>
				<exclude>cog\rbot-custom-*.cog</exclude>
				<exclude>cog\rbot-lightning.cog</exclude>
				<exclude>cog\rbot-meddroid.cog</exclude>
				<exclude>misc\cogstrings.uni</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>rbots-patch.gob</destName>
			<source>${project.build.directory}\dependency\rbots-jk-patch.gob</source>
		</file>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>rbots-patch-nohotkeys.gob</destName>
			<source>${project.build.directory}\dependency\rbots-jk-patch-nohotkeys.gob</source>
		</file>
	</files>
</assembly>
