	//2nd fire vars [HR]
	#firedelay2=1.0/powerboost;
	#minrange2=0.0;
	#maxrange2=0.8;
	botmode=BitSet(botmode,0x40000); // weapon not mounted
	KillTimerEx(120); // failsafe
