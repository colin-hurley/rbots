	if (difficulty > 2) ParseArg(rbot,"eyeoffset=(0.032/0.0/0.0)"); else ParseArg(rbot,"eyeoffset=(0.0/0.0/0.037)"); // Set LOS from weapon's height
	SendTrigger(-1,101000,botid,curweap,rbot,-1); // tell srv to change weapon
	SetArmedMode(rbot, 1);
	minrange=0.8;
