<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<outputDirectory>\</outputDirectory>
			<directory>${project.basedir}</directory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>rbots-mots.goo</destName>
			<source>${project.build.directory}\dependency\rbots-mots-episode.goo</source>
		</file>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>rbots-patch.goo</destName>
			<source>${project.build.directory}\dependency\rbots-mots-patch.goo</source>
		</file>
		<file>
			<outputDirectory>\</outputDirectory>
			<destName>rbots-patch-nohotkeys.Goo</destName>
			<source>${project.build.directory}\dependency\rbots-mots-patch-nohotkeys.goo</source>
		</file>
	</files>
</assembly>
